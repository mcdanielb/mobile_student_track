<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bmcdani_c971_task.MainPage">

    <ScrollView>
        <VerticalStackLayout
            x:Name="termsStackLayout"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start"
            HorizontalOptions="CenterAndExpand">

            <Image
                Source="wgu_logo.png"
                SemanticProperties.Description="The WGU logo and header"
                HeightRequest="150"
                HorizontalOptions="Fill" />

            <Label
                Text="Welcome, please choose a term to view its courses."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome the WGU student academic term tracker"
                FontSize="18"
                HorizontalTextAlignment="Center"
                Margin="25"/>

            <Button
                x:Name="AddTermBtn"
                Text="Add Term"
                SemanticProperties.Hint="Add a term"
                
                WidthRequest="100" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
