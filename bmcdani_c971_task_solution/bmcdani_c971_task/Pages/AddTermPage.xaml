<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:bmcdani_c971_task"
             x:Class="bmcdani_c971_task.Pages.AddTermPage"
             Title="Add Term">
    <StackLayout VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Padding="20">
        
        <Entry
            x:Name="AddTermNameEntry"
            MaxLength="50"
            Placeholder="Enter Term Name"
            HorizontalTextAlignment="Center"
            HorizontalOptions="Center"
            Margin="20"/>
        
        <Label
            Text="Select Start Date"
            HorizontalOptions="Center" />
        
        <local:CustomDatePicker
            x:Name="AddTermStartDatePicker"
            HorizontalOptions="Center" 
            Margin="0,0,0,20"/>
        
        <Label
            Text="Select End Date"
            HorizontalOptions="Center" />
        
        <local:CustomDatePicker
            x:Name="AddTermEndDatePicker"
            HorizontalOptions="Center"
            Margin="0,0,0,20"/>
        
        <Button
            Text="Add Term"
            Clicked="OnAddTerm_Clicked" />
    </StackLayout>
</ContentPage>